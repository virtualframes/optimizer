# =============================================================================
# This file provides an example configuration for the RDPManager module.
# Copy this file to .env and fill in the values for your environment.

# -- Core Module Settings --
ENCRYPTION_KEY=

# -- RDP Connection Settings --
RDP_ENABLED=true
RDP_DEFAULT_HOST=localhost
RDP_DEFAULT_PORT=3389
RDP_DEFAULT_USERNAME=administrator
RDP_DEFAULT_PASSWORD=
RDP_DEFAULT_DOMAIN=
RDP_CONNECTION_TIMEOUT=30
RDP_SESSION_TIMEOUT=3600
RDP_MAX_CONNECTIONS=10

# -- RDP Security & Authentication --
RDP_USE_TLS=true
RDP_VERIFY_CERTIFICATES=true
RDP_CERTIFICATE_PATH=/etc/ssl/certs/rdp.crt
RDP_PRIVATE_KEY_PATH=/etc/ssl/private/rdp.key

# -- RDP Display Settings --
RDP_SCREEN_WIDTH=1920
RDP_SCREEN_HEIGHT=1080
RDP_COLOR_DEPTH=32

# -- VM Management --
VM_PROVIDER=hyperv
VM_MANAGEMENT_URL=https://vm-manager.local:8443
VM_MANAGEMENT_TOKEN=
VM_DEFAULT_TEMPLATE=windows-server-2022
VM_RESOURCE_POOL=development
VM_NETWORK_ADAPTER=internal
VM_STORAGE_PATH=/var/lib/vms
VM_BACKUP_PATH=/var/backups/vms
VM_SNAPSHOT_ENABLED=true
VM_AUTO_START=false
VM_AUTO_STOP=true